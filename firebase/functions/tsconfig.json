{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "exactOptionalPropertyTypes": true,
        "target": "es2021"
    },
    "compileOnSave": false,
    "include": [
        "src"
    ]
}
